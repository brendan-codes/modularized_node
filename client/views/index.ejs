<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

      <h1>You are at an EJS page of a simple express app!!</h1>
      <form action="/users" method="post">
        Name: <input type="text" name="name"><br>
        Age: <input type="text" name="age"><br>
        <input type="submit" value="Add a User!"><br>
      </form>

      <hr>

      <% for(var user in users){ %>
          Name: <%= users[user].name %><br>
          Age: <%= users[user].age %><br>
          ID: <%= users[user]._id %><br>
          <a href="/users/<%=users[user]._id%>/destroy">Delete</a>

          <form action="/messages/<%=users[user]._id%>" method="post">
            <input type="text" name="message"><br>
            <input type="submit" value="Create Message!">
          </form>

          <% for(var message of users[user]._messages) {%>

              Message: <%= message.message %> <br>

          <% } %>

          <hr>
      <% } %>


  </body>
</html>
